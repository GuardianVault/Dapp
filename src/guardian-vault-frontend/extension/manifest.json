{
  "manifest_version": 3,
  "name": "Guardian Vault",
  "version": "0.1.0",
  "description": "Decentralized ckBTC wallet with guardian recovery (browser extension).",
  "action": {
    "default_title": "Guardian Vault",
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js", "type": "module" },
  "permissions": ["storage"],
  "host_permissions": ["https://ic0.app/*", "http://127.0.0.1:4943/*"],
  "icons": {
    "16": "../public/favicon.ico",
    "48": "../public/favicon.ico",
    "128": "../public/favicon.ico"
  }
}
